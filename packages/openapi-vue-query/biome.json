{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "extends": ["../../biome.json"],
  "files": {
    "experimentalScannerIgnores": ["./test/fixtures/"]
  },
  "linter": {
    "rules": {
      "complexity": {
        "noBannedTypes": "off"
      },
      "suspicious": {
        "noConfusingVoidType": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["*.vue"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          }
        }
      }
    }
  ]
}
