{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceRoot": ".",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "target": "ES2022",
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@tanstack/vue-query/types": ["node_modules/@tanstack/vue-query/build/modern/types.d.ts"]
    }
  },
  "include": ["src", "test", "*.ts"],
}
